{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@assets/*": ["./assets/*"],
      "@src/*": ["./src/*"],
      "@components": ["./src/components"],
      "@configs": ["./src/configs"],
      "@data": ["./src/data"],
      "@hooks": ["./src/hooks"],
      "@screens": ["./src/screens"],
      "@services": ["./src/services"],
      "@stores": ["./src/stores"],
      "@themes": ["./src/themes"],
      "@utils": ["./src/utils"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
